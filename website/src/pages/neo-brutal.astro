---
import NeoBrutalLayout from '../layouts/NeoBrutalLayout.astro';
import NeoBrutalHeader from '../components/NeoBrutalHeader.astro';
import NeoBrutalHero from '../components/NeoBrutalHero.astro';
import DataExplorer from '../components/DataExplorer.astro';
---

<NeoBrutalLayout title="RagaSense-Data | Neo-Brutal Design">
  <NeoBrutalHeader />
  <main>
    <NeoBrutalHero />
    <DataExplorer />
    
    <!-- Architecture Section -->
    <section id="architecture" class="py-16 bg-gray-100">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold mb-4 font-mono">DATA ARCHITECTURE</h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto font-mono">
            COMPREHENSIVE MULTI-DATABASE ARCHITECTURE
          </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          
          <!-- JSON Database -->
          <div class="p-6 border-4 border-black bg-white shadow-[8px_8px_0px_0px_rgba(0,0,0,1)]">
            <div class="w-16 h-16 bg-black border-2 border-black flex items-center justify-center mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-4 font-mono">JSON DATABASE</h3>
            <p class="text-gray-600 mb-4 font-mono">STRUCTURED DATA STORAGE</p>
            <ul class="text-sm text-gray-600 space-y-2 font-mono">
              <li>• 1,340 INDIVIDUAL RAGAS</li>
              <li>• 18 ARTISTS</li>
              <li>• 4,536 TRACKS</li>
              <li>• 12 CROSS-TRADITION MAPPINGS</li>
            </ul>
          </div>

          <!-- Neo4j Graph Database -->
          <div class="p-6 border-4 border-black bg-white shadow-[8px_8px_0px_0px_rgba(0,0,0,1)]">
            <div class="w-16 h-16 bg-black border-2 border-black flex items-center justify-center mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-4 font-mono">NEO4J GRAPH</h3>
            <p class="text-gray-600 mb-4 font-mono">RELATIONSHIP MAPPING</p>
            <ul class="text-sm text-gray-600 space-y-2 font-mono">
              <li>• RAGA RELATIONSHIPS</li>
              <li>• CROSS-TRADITION MAPPINGS</li>
              <li>• ARTIST CONNECTIONS</li>
              <li>• COMPOSITION NETWORKS</li>
            </ul>
          </div>

          <!-- Vector Database -->
          <div class="p-6 border-4 border-black bg-white shadow-[8px_8px_0px_0px_rgba(0,0,0,1)]">
            <div class="w-16 h-16 bg-black border-2 border-black flex items-center justify-center mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-4 font-mono">VECTOR DATABASE</h3>
            <p class="text-gray-600 mb-4 font-mono">SIMILARITY SEARCH</p>
            <ul class="text-sm text-gray-600 space-y-2 font-mono">
              <li>• AUDIO FEATURE VECTORS</li>
              <li>• SIMILARITY MATCHING</li>
              <li>• RECOMMENDATION ENGINE</li>
              <li>• ML MODEL SUPPORT</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Download Section -->
    <section id="download" class="py-16 bg-black text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold mb-4 font-mono">DOWNLOAD DATASET</h2>
          <p class="text-lg text-gray-300 max-w-3xl mx-auto font-mono">
            ACCESS THE COMPLETE RAGASENSE-DATA DATASET
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          
          <!-- Dataset Download -->
          <div class="p-8 border-4 border-white bg-white text-black shadow-[8px_8px_0px_0px_rgba(255,255,255,1)]">
            <div class="w-16 h-16 bg-black border-2 border-black flex items-center justify-center mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-4 font-mono">COMPLETE DATASET</h3>
            <p class="text-gray-600 mb-6 font-mono">
              DOWNLOAD THE FULL RAGASENSE-DATA DATASET INCLUDING ALL COMPONENTS
            </p>
            <button class="w-full px-6 py-3 bg-black text-white font-bold border-4 border-black font-mono hover:bg-white hover:text-black transition-all">
              DOWNLOAD (ZIP)
            </button>
          </div>

          <!-- API Access -->
          <div class="p-8 border-4 border-white bg-white text-black shadow-[8px_8px_0px_0px_rgba(255,255,255,1)]">
            <div class="w-16 h-16 bg-black border-2 border-black flex items-center justify-center mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-4 font-mono">API ACCESS</h3>
            <p class="text-gray-600 mb-6 font-mono">
              ACCESS DATA PROGRAMMATICALLY VIA REST API
            </p>
            <button class="w-full px-6 py-3 bg-black text-white font-bold border-4 border-black font-mono hover:bg-white hover:text-black transition-all">
              API DOCS
            </button>
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <footer class="bg-white border-t-4 border-black py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <div class="flex justify-center items-center mb-4">
          <div class="w-12 h-12 bg-black border-2 border-black flex items-center justify-center mr-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold font-mono">RAGASENSE-DATA</h3>
        </div>
        <p class="text-gray-600 font-mono">
          UNIFIED INDIAN CLASSICAL MUSIC DATASET
        </p>
        <p class="text-sm text-gray-500 mt-2 font-mono">
          © 2025 RagaSense-Data. All rights reserved.
        </p>
      </div>
    </div>
  </footer>
</NeoBrutalLayout>

