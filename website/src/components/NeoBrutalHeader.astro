---
// Neo-Brutal Header Component
---

<header class="bg-white border-b-4 border-black sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      
      <!-- Logo -->
      <div class="flex items-center">
        <div class="w-12 h-12 bg-black border-2 border-black flex items-center justify-center mr-4">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
          </svg>
        </div>
        <div>
          <h1 class="text-2xl font-bold font-mono">RAGASENSE-DATA</h1>
          <p class="text-xs text-gray-600 font-mono">UNIFIED INDIAN CLASSICAL MUSIC DATASET</p>
        </div>
      </div>

      <!-- Navigation -->
      <nav class="hidden md:flex space-x-8">
        <a href="#overview" class="px-4 py-2 border-2 border-black bg-white text-black font-bold font-mono hover:bg-black hover:text-white transition-all">
          OVERVIEW
        </a>
        <a href="#explorer" class="px-4 py-2 border-2 border-black bg-white text-black font-bold font-mono hover:bg-black hover:text-white transition-all">
          EXPLORER
        </a>
        <a href="#architecture" class="px-4 py-2 border-2 border-black bg-white text-black font-bold font-mono hover:bg-black hover:text-white transition-all">
          ARCHITECTURE
        </a>
        <a href="#download" class="px-4 py-2 border-2 border-black bg-white text-black font-bold font-mono hover:bg-black hover:text-white transition-all">
          DOWNLOAD
        </a>
      </nav>

      <!-- Mobile Menu Button -->
      <button class="md:hidden w-10 h-10 border-2 border-black bg-white flex items-center justify-center" onclick="toggleMobileMenu()">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden border-t-2 border-black bg-white">
      <div class="px-2 pt-2 pb-3 space-y-1">
        <a href="#overview" class="block px-3 py-2 border-2 border-black bg-white text-black font-bold font-mono hover:bg-black hover:text-white transition-all">
          OVERVIEW
        </a>
        <a href="#explorer" class="block px-3 py-2 border-2 border-black bg-white text-black font-bold font-mono hover:bg-black hover:text-white transition-all">
          EXPLORER
        </a>
        <a href="#architecture" class="block px-3 py-2 border-2 border-black bg-white text-black font-bold font-mono hover:bg-black hover:text-white transition-all">
          ARCHITECTURE
        </a>
        <a href="#download" class="block px-3 py-2 border-2 border-black bg-white text-black font-bold font-mono hover:bg-black hover:text-white transition-all">
          DOWNLOAD
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  function toggleMobileMenu() {
    const menu = document.getElementById('mobile-menu');
    menu.classList.toggle('hidden');
  }
</script>

