        <div class="text-center">
          <div class="text-2xl font-bold text-green-600 mb-1">9</div>
          <div class="text-sm text-gray-600">Kambhoji</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-purple-600 mb-1">9</div>
          <div class="text-sm text-gray-600">Yadukulakamboji</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-orange-600 mb-1">9</div>
          <div class="text-sm text-gray-600">Bilahari</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-red-600 mb-1">8</div>
          <div class="text-sm text-gray-600">Kedaram</div>
        </div>
      </div>
    </div>
  </div>
</section>

