<script>
  // Tab switching functionality
  const carnaticTab = document.getElementById('carnatic-tab');
  const hindustaniTab = document.getElementById('hindustani-tab');
  const carnaticContent = document.getElementById('carnatic-content');
  const hindustaniContent = document.getElementById('hindustani-content');

  carnaticTab.addEventListener('click', () => {
    carnaticTab.classList.add('active', 'bg-white', 'text-gray-900', 'shadow-sm');
    carnaticTab.classList.remove('text-gray-600');
    hindustaniTab.classList.remove('active', 'bg-white', 'text-gray-900', 'shadow-sm');
    hindustaniTab.classList.add('text-gray-600');
    
    carnaticContent.classList.remove('hidden');
    hindustaniContent.classList.add('hidden');
  });

  hindustaniTab.addEventListener('click', () => {
    hindustaniTab.classList.add('active', 'bg-white', 'text-gray-900', 'shadow-sm');
    hindustaniTab.classList.remove('text-gray-600');
    carnaticTab.classList.remove('active', 'bg-white', 'text-gray-900', 'shadow-sm');
    carnaticTab.classList.add('text-gray-600');
    
    hindustaniContent.classList.remove('hidden');
    carnaticContent.classList.add('hidden');
  });
</script>

<style>
  .tab-button {
    color: #6b7280;
  }
  
  .tab-button.active {
    background-color: white;
    color: #111827;
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  }
  
  .tab-content {
    display: block;
  }
  
  .tab-content.hidden {
    display: none;
  }
</style>
